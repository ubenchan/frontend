{
	"compilerOptions": {
		"lib": ["ES2022", "DOM"],
		"baseUrl": "./",
		"jsx": "react-jsx",
		"module": "ESNext",
		"target": "ES2020",
		"moduleResolution": "node",
		"allowJs": true,
		"strict": true,
		"sourceMap": true,
		"paths": {
			"ui/*": ["./src/ui/*"],
			"icon/*": ["./src/icons/*"],
			"page/*": ["./src/pages/*"],
			"model/*": ["./src/models/*"],
			"lay/*": ["./src/layout/*"],
			"lib/*": ["./src/lib/*"],
			"sotore": ["./src/global/sotore"]
		},
		"outDir": "./dist",
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true
	},
	"ts-node": {
		"esm": true
	},
	"files": ["declare.d.ts"],
	"include": ["src"]
}
